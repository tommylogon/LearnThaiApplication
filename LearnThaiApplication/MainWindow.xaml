<Window x:Class="LearnThaiApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LearnThaiApplication"
        mc:Ignorable="d"
        Title="Learn Thai" Height="600" Width="1000">

    <Viewbox HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="0,0,0,-1">
        <TabControl x:Name="MainWindow_tabController" HorizontalAlignment="Left"  VerticalAlignment="Top"  Background="White" Foreground="Black" SelectionChanged="OnTabChanged" Width="995" Height="564">
            <TabItem Header="Learn the language" Margin="0,0,0,-2">
                <Grid Background="#FF6DA5C4" Margin="0">
                    <Label x:Name="lbl_Counter_Page1" Content="{Binding Path=CurrentFileIndex}" HorizontalAlignment="Left" Margin="110,142,0,0" VerticalAlignment="Top" Height="31" Width="38" Foreground="#FFE6F8FF" />
                    <CheckBox x:Name="ckb_DescBox_Page1" Content="Description" HorizontalAlignment="Left" Margin="10,193,0,0" IsChecked="{Binding Path=HasDescription}" VerticalAlignment="Top" Foreground="#FFE6F8FF" Checked="DescriptionBox_Checked" Unchecked="DescriptionBox_Checked" />
                    <CheckBox x:Name="ckb_Randomized_Page1" Content="Randomize words" HorizontalAlignment="Left" Margin="10,173,0,0" IsChecked="{Binding Path=IsRandom}" VerticalAlignment="Top" Foreground="#FFE6F8FF" Checked="Randomized_Checked" Unchecked="Randomized_Checked" />
                    <TextBox x:Name="txt_Answear_Page1" HorizontalAlignment="Left" Height="28" Margin="290,150,0,0" TextWrapping="Wrap" Text="{Binding Mode=TwoWay, Path=Answear, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="150" KeyUp="OnKeyUp" />
                    <Button x:Name="btn_validate_Page1" Content="Check" HorizontalAlignment="Left" Height="24" Margin="318,183,0,0" VerticalAlignment="Top" Width="89" Click="ValidateAnswear" />
                    <Button x:Name="btn_Next_Word_Page1" Content="Next" HorizontalAlignment="Left" Height="24" Margin="412,183,0,0" VerticalAlignment="Top" Width="35" Click="NextWord" />
                    <Button x:Name="btn_Prev_Word_Page1" Content="Prev" HorizontalAlignment="Left" Height="24" Margin="278,183,0,0" VerticalAlignment="Top" Width="35" Click="PrevWord" />
                    <TextBlock x:Name="txb_Status_Page1" HorizontalAlignment="Left" Margin="278,222,0,0" TextWrapping="Wrap" Text="{Binding Path=Result}" VerticalAlignment="Top" Height="35" Width="245" FontSize="24" Foreground="#FFE6F8FF" />
                    <ComboBox x:Name="cb_Chapter_Page1" ItemsSource="{Binding Path=Chapters}" DisplayMemberPath="ChapterName" SelectedIndex="{Binding Path=SelectedChapterIndex, Mode=TwoWay, NotifyOnSourceUpdated=True, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Margin="11,78,0,0" VerticalAlignment="Top" Width="120" SelectedValuePath="Content" SelectionChanged="ChapterChanged"/>
                    <Label x:Name="lbl_Chapter_Page1" Content="Chapter:" HorizontalAlignment="Left" Margin="11,47,0,0" VerticalAlignment="Top" Width="72" Foreground="#FFE6F8FF" />
                    <Label x:Name="lbl_ChapterCount_Page1" Content="Words in chapter: " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,116,0,0" Foreground="#FFE6F8FF" />
                    <Label x:Name="lbl_TrainWhat_Page1" Content="What to train" HorizontalAlignment="Left" Margin="11,220,0,0" VerticalAlignment="Top" Foreground="#FFE6F8FF" />
                    <RadioButton x:Name="rb_TrainScript_Page1" Content="Writhing Thai" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="11,251,0,0" Checked="SelectWhatToPractice" GroupName="TrainWhat_Page1" Foreground="#FFE6F8FF" />
                    <RadioButton x:Name="rb_TrainEngWords_Page1" Content="English meanings" HorizontalAlignment="Left" Margin="11,271,0,0" VerticalAlignment="Top" Checked="SelectWhatToPractice" GroupName="TrainWhat_Page1" Foreground="#FFE6F8FF" />
                    <RadioButton x:Name="rb_TrainFonet_Page1" Content="Pronounciations" HorizontalAlignment="Left" Margin="11,291,0,0" VerticalAlignment="Top" Checked="SelectWhatToPractice" GroupName="TrainWhat_Page1" Foreground="#FFE6F8FF" />
                    <Label x:Name="lbl_ChapterCount_Page1_Copy" Content="Current word:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="11,142,0,0" Foreground="#FFE6F8FF" />
                    <Label x:Name="lbl_Points" Content="{Binding Path=CorrectPoints}" HorizontalAlignment="Left" Margin="11,19,0,0" VerticalAlignment="Top" Foreground="#FFE6F8FF" />
                    <Button x:Name="btn_Speaker_Page1" Content="" Margin="461,169,0,0" Width="42" HorizontalAlignment="Left" VerticalAlignment="Top" Click="PlaySound" />
                    <ScrollViewer x:Name="scrvr_Description_page1" HorizontalAlignment="Left" Height="235" Margin="329,291,0,0" VerticalAlignment="Top" Width="650" Foreground="#FFE6F8FF">
                        <TextBlock x:Name="txb_Description_page1" TextWrapping="Wrap" Text="{Binding Path=DescriptionString}" FontSize="24" />
                    </ScrollViewer>
                    <ScrollViewer HorizontalAlignment="Left" Height="135" Margin="329,10,0,0" VerticalAlignment="Top" Width="650">
                        <TextBlock x:Name="txb_ThaiScript_Page1" TextWrapping="Wrap" Text="{Binding Path=ThaiScriptString}" Foreground="#FFE6F8FF" FontSize="48" />
                    </ScrollViewer>
                </Grid>
            </TabItem>
            <TabItem Header="Train Symbols">
                <Grid Background="#FF6DA5C4">
                    <TextBox x:Name="txt_Answear_Page2"  HorizontalAlignment="Left" Height="28" Margin="290,150,0,0" TextWrapping="Wrap" Text="{Binding Mode=TwoWay, Path=Answear, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="150" KeyUp="OnKeyUp" />
                    <Button x:Name="btn_validate_Page2" Content="Check" HorizontalAlignment="Left" Height="24.714" Margin="318,183,0,0" VerticalAlignment="Top" Width="89" Click="ValidateAnswear" />
                    <Button x:Name="btn_Next_Word_Page2" Content="Next" HorizontalAlignment="Left" Height="24" Margin="412,183,0,0" VerticalAlignment="Top" Width="35" Click="NextWord" />
                    <Button x:Name="btn_Prev_Word_Page2" Content="Prev" HorizontalAlignment="Left" Height="24" Margin="278,183,0,0" VerticalAlignment="Top" Width="35" Click="PrevWord" />
                    <TextBlock x:Name="txb_Information_Page2" HorizontalAlignment="Left" Margin="10,345,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="191" Width="236" FontSize="16" Foreground="#FFE6F8FF"><Run Text="Here you can select between consonants or vowels." /><Run Text=" " /><LineBreak /><Run Text="You can also learn and practise prenounciations and numbers." /></TextBlock>
                    <CheckBox x:Name="ckb_DescBox_Page2" IsChecked="{Binding Path=HasDescription}" Content="Description" HorizontalAlignment="Left" Margin="10,193,0,0" VerticalAlignment="Top" Foreground="#FFE6F8FF" Checked="DescriptionBox_Checked" Unchecked="DescriptionBox_Checked" />
                    <CheckBox x:Name="ckb_Randomized_Page2" IsChecked="{Binding Path=IsRandom}" Content="Randomize words" HorizontalAlignment="Left" Margin="10,173,0,0" VerticalAlignment="Top" Foreground="#FFE6F8FF" Checked="Randomized_Checked" Unchecked="Randomized_Checked" />
                    <ScrollViewer HorizontalAlignment="Left" Height="135" Margin="329,10,0,0" VerticalAlignment="Top" Width="650">
                        <TextBlock x:Name="txb_ThaiScript_Page2" HorizontalAlignment="Left"  TextWrapping="Wrap" VerticalAlignment="Top" FontSize="48" Foreground="#FFE6F8FF" Text="{Binding Path=ThaiScriptString}" />
                    </ScrollViewer>

                    <TextBlock x:Name="txb_Status_Page2" HorizontalAlignment="Left" Margin="289,205,0,0" TextWrapping="Wrap" Text="{Binding Path=Result}" VerticalAlignment="Top" Height="38" Width="245" FontSize="24" Foreground="#FFE6F8FF" />
                    <Label x:Name="lbl_TrainWhat_Page2" Content="What to train" HorizontalAlignment="Left" Margin="11,220,0,0" VerticalAlignment="Top" Foreground="#FFE6F8FF" />
                    <RadioButton x:Name="rb_TrainScript_Page2" Content="Writhing Thai" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="11,251,0,0" Checked="SelectWhatToPractice" GroupName="TrainWhat_Page2" Foreground="#FFE6F8FF" />
                    <RadioButton x:Name="rb_TrainEngWords_Page2" Content="English meanings" HorizontalAlignment="Left" Margin="11,271,0,0" VerticalAlignment="Top" Checked="SelectWhatToPractice" GroupName="TrainWhat_Page2" Foreground="#FFE6F8FF" />
                    <RadioButton x:Name="rb_TrainFonet_Page2" Content="Pronounciations" HorizontalAlignment="Left" Margin="11,291,0,0" VerticalAlignment="Top" Checked="SelectWhatToPractice" GroupName="TrainWhat_Page2" Foreground="#FFE6F8FF" />
                    <Label x:Name="lbl_Points_Page2" Content="{Binding Path=CorrectPoints}" HorizontalAlignment="Left" Margin="11,19,0,0" VerticalAlignment="Top" Foreground="#FFE6F8FF" />
                    <ScrollViewer HorizontalAlignment="Left" Height="235" Margin="329,291,0,0" VerticalAlignment="Top" Width="650">
                        <TextBlock x:Name="txb_Description_page2" TextWrapping="Wrap" Text="{Binding Path=DescriptionString}" Foreground="#FFE6F8FF" FontSize="24" />
                    </ScrollViewer>
                    <Button x:Name="btn_Speaker_Page2" Content="" Margin="461,169,0,0" Width="42" HorizontalAlignment="Left" VerticalAlignment="Top" Click="PlaySound" />
                    <ComboBox x:Name="cb_SymbolChapters" HorizontalAlignment="Left" Margin="11,78,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ChapterChanged">
                        <ComboBoxItem Content="Consonants" />
                        <ComboBoxItem Content="Vowels" />
                        <ComboBoxItem Content="Numbers" />
                        <ComboBoxItem Content="Closing sounds" />
                        <ComboBoxItem Content="Tones" />
                    </ComboBox>
                    <Label x:Name="lbl_Counter_Page2" Content="{Binding Path=CurrentFileIndex}" HorizontalAlignment="Left" Margin="110,142,0,0" VerticalAlignment="Top" Height="31" Width="38" Foreground="#FFE6F8FF" />
                    <Label x:Name="lbl_Chapter_Page2" Content="Chapter:" HorizontalAlignment="Left" Margin="11,47,0,0" VerticalAlignment="Top" Width="72" Foreground="#FFE6F8FF" />
                    <Label x:Name="lbl_ChapterCount_Page2" Content="Words in chapter: " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,116,0,0" Foreground="#FFE6F8FF" />
                    <Label x:Name="lbl_ChapterCount_Page3" Content="Current word:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="11,142,0,0" Foreground="#FFE6F8FF" />
                </Grid>
            </TabItem>
            
            <TabItem Header="New Content Man">
                <Grid Background="#FF6DA5C4" Margin="0,-1,0,0">
                    <DataGrid x:Name="dg_ContentManagement"
                              HorizontalAlignment="Left"
                              Margin="0,42,0,0"
                              Height="485" Width="979"
                              VerticalAlignment="Top"
                              AutoGenerateColumns="False"
                              ItemsSource="{Binding Path=DisplayList, Mode=TwoWay, NotifyOnSourceUpdated=True, UpdateSourceTrigger=PropertyChanged}" 
                              SelectedItem="{Binding Path=SelectedWordDG, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}"                               
                              CanUserDeleteRows="False"
                              SelectionMode="Extended"
                              SelectionUnit="CellOrRowHeader" RowEditEnding="RowEditEnding" KeyUp="DG_ConMan_KeyUp"  >
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Chapter" Binding="{Binding Path=Chapter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" MaxWidth="150"/>
                            <DataGridTextColumn Header="Thai Script" Binding="{Binding Path=ThaiScript_String, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" MaxWidth="150">
                                <DataGridTextColumn.ElementStyle>
                                    <Style>
                                        <Setter Property="TextBlock.TextWrapping" Value="Wrap"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Thai Fonetical" Binding="{Binding Path=ThaiFonet_String, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" MaxWidth="150">
                                <DataGridTextColumn.ElementStyle>
                                    <Style>
                                        <Setter Property="TextBlock.TextWrapping" Value="Wrap"/>

                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="English meaning" Binding="{Binding Path=EngWords_String, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" MaxWidth="250">
                                <DataGridTextColumn.ElementStyle>
                                    <Style>
                                        <Setter Property="TextBlock.TextWrapping" Value="Wrap"/>

                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTemplateColumn Header="Sound path" MaxWidth="250">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ScrollViewer Height="35">
                                            <TextBox Text="{Binding Path=SoundPath_String, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  TextWrapping="Wrap"/>
                                        </ScrollViewer>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Header="Description" MaxWidth="350">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ScrollViewer Height="45">
                                            <TextBox Text="{Binding Path=EngDesc, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  TextWrapping="Wrap"/>
                                        </ScrollViewer>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn Header="Tone" Binding="{Binding Path=Tone_String, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" MaxWidth="150">
                                <DataGridTextColumn.ElementStyle>
                                    <Style>
                                        <Setter Property="TextBlock.TextWrapping" Value="Wrap"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <TextBox x:Name="txt_SearchBar" HorizontalAlignment="Left" Height="23" Margin="8,9,0,0" Text="{Binding SearchString, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" KeyUp="Seach_KeyUp" />
                    <Button x:Name="btn_Search" Content="Search" HorizontalAlignment="Left" Margin="133,9,0,0" VerticalAlignment="Top" Width="70" Height="23" Click="Seach_Clicked" />
                </Grid>
            </TabItem>
            <TabItem Header="Settings">
                <Grid Background="#FF6DA5C4" Margin="0">
                    <Label Content="Current Path to language files is:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Foreground="#FFE6F8FF" />
                    <TextBlock x:Name="txb_FilePath_Settings" HorizontalAlignment="Left" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Margin="196,15,0,0" Foreground="#FFE6F8FF" />
                    <CheckBox x:Name="ckb_LoopChapter" IsChecked="{Binding Path=IsContinious}" Content="Loop chapter" HorizontalAlignment="Left" Margin="171,71,0,0" VerticalAlignment="Top" Checked="LoopChapter_Checked" Unchecked="LoopChapter_Checked" Foreground="#FFE6F8FF" />
                    <Button Content="Find sound files" HorizontalAlignment="Left" Margin="135,292,0,0" VerticalAlignment="Top" Width="90" Click="StartSoundDownload" RenderTransformOrigin="1.152,0.697" />
                    <Button Content="Check sound status" HorizontalAlignment="Left" Margin="135,317,0,0" VerticalAlignment="Top" Width="112" Click="CheckSoundStatus_Clicked" />
                    <ComboBox x:Name="cb_SelectList" HorizontalAlignment="Left" Margin="10,290,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="CheckSoundChapter_Changed" />
                    <CheckBox x:Name="ckb_DescBox_Setting" IsChecked="{Binding Path=HasDescription}" Content="Description" HorizontalAlignment="Left" Margin="171,128,0,0" VerticalAlignment="Top" Foreground="#FFE6F8FF" Checked="DescriptionBox_Checked" Unchecked="DescriptionBox_Checked" />
                    <CheckBox x:Name="ckb_Randomized_Setting" IsChecked="{Binding Path=IsRandom}" Content="Randomize words" HorizontalAlignment="Left" Margin="171,108,0,0" VerticalAlignment="Top" Foreground="#FFE6F8FF" Checked="Randomized_Checked" Unchecked="Randomized_Checked" />
                    <Label x:Name="lbl_TrainWhat_Page2_Copy1" Content="What to train" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top" Foreground="#FFE6F8FF" />
                    <RadioButton x:Name="rb_TrainScript_Setting" Content="Writhing Thai" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,71,0,0" Checked="SelectWhatToPractice" GroupName="TrainWhat" Foreground="#FFE6F8FF" />
                    <RadioButton x:Name="rb_TrainEngWords_Setting" Content="English meanings" HorizontalAlignment="Left" Margin="10,91,0,0" VerticalAlignment="Top" Checked="SelectWhatToPractice" GroupName="TrainWhat" Foreground="#FFE6F8FF" />
                    <RadioButton x:Name="rb_TrainFonet_Setting" Content="Pronounciations" HorizontalAlignment="Left" Margin="10,111,0,0" VerticalAlignment="Top" Checked="SelectWhatToPractice" GroupName="TrainWhat" Foreground="#FFE6F8FF" />
                    <Button Content="Delete sound paths" HorizontalAlignment="Left" Margin="135,342,0,0" VerticalAlignment="Top" Width="112" Click="RemoveSoundPath" />
                    <CheckBox x:Name="ckb_FullDesc" IsChecked="{Binding Path=DisplayAll}" Content="Full description?" HorizontalAlignment="Left" Margin="171,91,0,0" VerticalAlignment="Top" Foreground="#FFE6F8FF" Checked="FullDesc_Checked" Unchecked="FullDesc_Checked" />
                    <Button x:Name="btn_SaveSettings" Content="Save settings" HorizontalAlignment="Left" Margin="811,447,0,0" VerticalAlignment="Top" Width="75" Click="SaveSettings_Click" />
                    <Button Content="Set SoundPaths" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="135,367,0,0" Click="SetSoundPath_clicked" />
                    <Button Content="Print all words" HorizontalAlignment="Left" Margin="135,392,0,0" VerticalAlignment="Top" Width="75" Click="PrintAllWordsToFile" />
                    <ProgressBar Minimum="0" Maximum="100" Name="pbStatus" Margin="252,279,273,173" />
                    <Label Content="Toggle settings" HorizontalAlignment="Left" Margin="171,45,0,0" VerticalAlignment="Top" Foreground="#FFE6F8FF" />
                    <CheckBox x:Name="ckb_AutoPlay" IsChecked="{Binding Path=AutoPlay}" Content="Auto play sounds" HorizontalAlignment="Left" Margin="171,148,0,0" VerticalAlignment="Top" Background="White" Foreground="#FFE6F8FF" Checked="AutoPlay_Checked" Unchecked="AutoPlay_Checked" />
                    <CheckBox x:Name="ckb_SkipIntro" IsChecked="{Binding Path=SkipIntro}" Content="Skip intro message" HorizontalAlignment="Left" Margin="171,168,0,0" VerticalAlignment="Top" Foreground="#FFE6F8FF" Checked="SkipMessage_Checked" Unchecked="SkipMessage_Checked" />
                    <CheckBox x:Name="ckb_showSaveLocation" IsChecked="{Binding ShowSaveLocation}" Content="Show save location" HorizontalAlignment="Left" Margin="300,71,0,0" VerticalAlignment="Top" Checked="LoopChapter_Checked" Unchecked="LoopChapter_Checked" Foreground="#FFE6F8FF" />
                    <CheckBox x:Name="ckb_SkipCompletedWords" IsChecked="{Binding IsContinious}" Content="Skip completed words" HorizontalAlignment="Left" Margin="300,91,0,0" VerticalAlignment="Top" Checked="LoopChapter_Checked" Unchecked="LoopChapter_Checked" Foreground="#FFE6F8FF" />
                    <CheckBox x:Name="ckb_setting_7_Copy1" IsChecked="{Binding IsContinious}" Content="setting" HorizontalAlignment="Left" Margin="300,108,0,0" VerticalAlignment="Top" Checked="LoopChapter_Checked" Unchecked="LoopChapter_Checked" Foreground="#FFE6F8FF" />
                    <CheckBox x:Name="ckb_setting_7_Copy2" IsChecked="{Binding IsContinious}" Content="setting" HorizontalAlignment="Left" Margin="300,128,0,0" VerticalAlignment="Top" Checked="LoopChapter_Checked" Unchecked="LoopChapter_Checked" Foreground="#FFE6F8FF" />
                    <CheckBox x:Name="ckb_setting_7_Copy3" IsChecked="{Binding IsContinious}" Content="setting" HorizontalAlignment="Left" Margin="300,148,0,0" VerticalAlignment="Top" Checked="LoopChapter_Checked" Unchecked="LoopChapter_Checked" Foreground="#FFE6F8FF" />
                    <CheckBox x:Name="ckb_setting_7_Copy4" IsChecked="{Binding IsContinious}" Content="setting" HorizontalAlignment="Left" Margin="300,168,0,0" VerticalAlignment="Top" Checked="LoopChapter_Checked" Unchecked="LoopChapter_Checked" Foreground="#FFE6F8FF" />
                    <ComboBox x:Name="comboBox" ItemsSource="{Binding Path=Users}" HorizontalAlignment="Left" Margin="859,9,0,0" VerticalAlignment="Top" Width="120"/>
                    <Button x:Name="btn_ClearCurrentUserList" Content="Clear known words" HorizontalAlignment="Left" Margin="748,10,0,0" VerticalAlignment="Top" Width="106" Click="ClearCurrentUserKnownWords"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Viewbox>
</Window>